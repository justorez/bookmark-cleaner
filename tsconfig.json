{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": [
      "ESNext", 
      "DOM"
    ],
    "skipLibCheck": true
  },
  "include": [
    "types/*.ts",
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
